{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["DOM", "ES2020"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@chrome/*": ["src/chrome/*"],
      "@tampermonkey/*": ["src/tampermonkey/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}